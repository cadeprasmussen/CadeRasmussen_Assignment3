@{
    ViewBag.Title = "Add New Movie";
}

@model CadeRasmussen_Assignment3.Models.Movies


@*Creating the form for movies to be entered, including asp-for in labels so if text is hit then it will focus on input*@
<form asp-action="AddMovie" method="post">
    <div>
        <label asp-for="Category">Category: </label>
        <input asp-for="Category" />
    </div>
    <div>
        <label asp-for="Title">Title: </label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="Year">Year: </label>
        <input asp-for="Year" />
    </div>
    <div>
        <label asp-for="Director">Director: </label>
        <input asp-for="Director" />
    </div>
    <div>
        @*Drop down menus for ratings*@
        <label asp-for="Rating">Rating: </label>
        <select asp-for="Rating">
            <option value="">Select One</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <div>
        @*Drop down menu for edited or not edited*@
        <label asp-for="Edited">Edited: </label>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div>
        <label asp-for="LentTo">Lent To: </label>
        <input asp-for="LentTo" />
    </div>
    <div>
        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" />
    </div>

    <button type="submit">Add Movie to List</button>
    <div asp-validation-summary="All"></div>
</form>