@{
    ViewBag.Title = "Movie List";
}

@model IEnumerable<CadeRasmussen_Assignment3.Models.Movies>

<div>
    <table>
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CadeRasmussen_Assignment3.Models.Movies x in Model)
            {
                @*Using an if statement to skip the movie when the title is Independence Day, because 
                    'as the “Most American Movie Ever Made” which is obviously not true'*@
                @if (x.Title == "Independence Day") continue;
                else
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        @*Just mkaing the values of the boolean to come out as Yes or blank depending on the value of the input, being true or false*@
                        @if (x.Edited == true)
                        {
                            <td>Yes</td>
                        }
                        else
                        {
                            <td></td>
                        }
                        <td>@x.LentTo</td>
                        <td>@x.Notes</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
